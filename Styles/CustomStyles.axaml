<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Styles.Resources>

    <SolidColorBrush x:Key="ValorantRed" Color="#FF4655"/>
    <SolidColorBrush x:Key="ValorantRedHover" Color="#E63E4D"/>
    <SolidColorBrush x:Key="ValorantRedPressed" Color="#CC3644"/>
    <SolidColorBrush x:Key="BackgroundDark" Color="#0F1115"/>
    <SolidColorBrush x:Key="BackgroundCard" Color="#1A1D23"/>
    <SolidColorBrush x:Key="BackgroundHover" Color="#1E2329"/>
    <SolidColorBrush x:Key="BorderColor" Color="#2D3139"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#A0A3B0"/>
    
  </Styles.Resources>

  <!-- Title Bar Button Style -->
  <Style Selector="Button.titlebar">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Width" Value="46"/>
    <Setter Property="Height" Value="32"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.titlebar:pointerover">
    <Setter Property="Background" Value="#1E2329"/>
  </Style>

  <Style Selector="Button.titlebar.close:pointerover">
    <Setter Property="Background" Value="#FF4655"/>
  </Style>

  <!-- Primary Button Style -->
  <Style Selector="Button.primary">
    <Setter Property="Background" Value="#FF4655"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="20,10"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.primary:pointerover">
    <Setter Property="Background" Value="#E63E4D"/>
  </Style>

  <Style Selector="Button.primary:pressed">
    <Setter Property="Background" Value="#CC3644"/>
  </Style>

  <!-- Secondary Button Style -->
  <Style Selector="Button.secondary">
    <Setter Property="Background" Value="#1A1D23"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#2D3139"/>
    <Setter Property="Padding" Value="16,8"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.secondary:pointerover">
    <Setter Property="Background" Value="#1E2329"/>
    <Setter Property="BorderBrush" Value="#FF4655"/>
  </Style>

  <!-- Icon Button Style -->
  <Style Selector="Button.icon">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#2D3139"/>
    <Setter Property="Width" Value="36"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.icon:pointerover">
    <Setter Property="Background" Value="#1E2329"/>
    <Setter Property="BorderBrush" Value="#FF4655"/>
  </Style>

  <!-- Navigation Button Style -->
  <Style Selector="Button.nav">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#A0A3B0"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="16,10"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Left"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
        <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.nav:pointerover">
    <Setter Property="Background" Value="#1A1D23"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
  </Style>

  <Style Selector="Button.nav.selected">
    <Setter Property="Background" Value="#1A1D23"/>
    <Setter Property="Foreground" Value="#FF4655"/>
  </Style>

  <!-- Skin Card Button Style -->
  <Style Selector="Button.skin-card">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
        <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.skin-card:pointerover">
    <Setter Property="Opacity" Value="0.8"/>
    <Setter Property="BorderBrush" Value="#FF4655"/>
  </Style>

  <!-- TextBox Style -->
  <Style Selector="TextBox">
    <Setter Property="Background" Value="#1A1D23"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#2D3139"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CaretBrush" Value="#FF4655"/>
    <Setter Property="SelectionBrush" Value="#FF4655"/>
  </Style>

  <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
    <Setter Property="BorderBrush" Value="#FF4655"/>
  </Style>

  <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
    <Setter Property="BorderBrush" Value="#3D4149"/>
  </Style>

  <!-- Section Header Style -->
  <Style Selector="TextBlock.section-header">
    <Setter Property="Foreground" Value="#A0A3B0"/>
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Margin" Value="16,20,16,8"/>
    <Setter Property="LetterSpacing" Value="0.5"/>
  </Style>

  <!-- Card Style -->
  <Style Selector="Border.card">
    <Setter Property="Background" Value="#1A1D23"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="BoxShadow" Value="0 4 16 0 #00000040"/>
  </Style>

  <!-- Loading Animation -->
  <Style Selector="Ellipse.loading-circle">
    <Style.Animations>
      <Animation Duration="0:0:1.5" IterationCount="Infinite">
        <KeyFrame Cue="0%">
          <Setter Property="Opacity" Value="0.3"/>
        </KeyFrame>
        <KeyFrame Cue="50%">
          <Setter Property="Opacity" Value="1.0"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="Opacity" Value="0.3"/>
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

  <!-- Progress Bar Animation -->
  <Style Selector="Border.loading-bar">
    <Style.Animations>
      <Animation Duration="0:0:2" IterationCount="Infinite">
        <KeyFrame Cue="0%">
          <Setter Property="Width" Value="0"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="Width" Value="400"/>
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

</Styles>
